{
    // Customize VS Code window appearance  
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#3776AB", // Python Blue
        "titleBar.activeForeground": "#FFFFFF" // Text contrast
    },
    "workbench.colorTheme": "Default Dark+",

    // Configure bracket pair colorization
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.guides.bracketPairs": true,

    // Sets a visual guideline
    "editor.rulers": [120],

    // Automatically fix Ruff errors on save
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",

    // Automatically format toml files on save
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },

    "files.exclude": {
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/__pycache__": true,
        "**/.coverage": true,
        "**/.pytest_cache": true
    },

    // Configure pytest for VS Code
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
}
